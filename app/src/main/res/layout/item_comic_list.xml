<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="264dp"
    android:orientation="vertical">

    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:id="@+id/cvComicListItem"-->
    <!--        card_view:cardCornerRadius="4dp"-->
    <!--        android:layout_margin="2dp"-->
    <!--        android:longClickable="true"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cvComicListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:longClickable="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/ivComicListItem"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Comic thumbnail" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvComicListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/ibCollect"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Collect button"
            android:src="@drawable/ic_playlist_add_black_24dp" />

        <TextView
            android:id="@+id/tvNumOfPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id="@+id/ibFavorite"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Favorite button"
            android:src="@drawable/ic_favorite_border_black_24dp" />

    </RelativeLayout>

    <!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>